<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
     @font-face
    {
      src: url(Poppins-Regular.ttf);
      font-family: pop;
    }
    @font-face
    {
      src: url(Poppins-BlackItalic.ttf);
      font-family: popBold;
    }
    * {
      font-family: pop;
    /* Base styles */
    }
  h1 {
  padding-top: 50px;
  /* text-align: center; */
  }

.images {
  max-width: 100%;
  height: 400px;
  margin: auto;
}

img {
  height: 400px;
  border: 1px solid black;
}

#des {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex {
  display: flex;
  justify-content: center;
}

p {
  padding-left: 10px;
}

table {
  width: 70%;
}

table, td {
  border: 2px solid grey;
  border-collapse: collapse;
}

td {
  width: 50%;
  text-align: center;
}

td h2, p {
  display: inline-block;
}

#pencil {
  padding: 15px 20px;
  border-radius: 50%;
  border: 2px solid #ff0051;
  position: fixed;
  right: 30px;
  top: 500px;
  color: #ff0051;
  font-size: 20px;
}

#hide {
  display: none;
}

/* Media queries for responsiveness */

/* For max-width: 1200px */
@media (max-width: 1320px) {

  img {
    height: 340px;
  }

  table {
    
    width: 80%; /* Slightly wider table */
  }
}

/* For max-width: 900px */
@media (max-width: 1150px) {
  img {
    height: 300px;
  }
  td,th{
    padding:0px;
  }
  table {
    width: 75%; /* Almost full width table */
  }

  #pencil {
    right: 20px;
    top: 400px; /* Adjusted position */
    font-size: 18px;
  }
  #des{
    margin-top:-90px;
  }
}

/* For max-width: 600px */
@media (max-width: 1000px) {  
  img {
    height: 250px;
  }

  table {
    width: 70%; /* Full width table */
  }
  
  td {
    width: 50%; /* Full width cells */
    font-size: 14px; /* Smaller font size */
  }
  h2{
    font-size:20px;
  }
  
}
@media (max-width: 840px) {

  img {
    height: 240px;
  }
}
@media (max-width: 800px) {
  img {
    height: 230px;
  }
}
@media (max-width: 760px) {
  img {
    height: 310px;
  }

  table {
    width: 80%; /* Full width table */
  }
  h2{
    font-size:18px;
  }
  #des{
    padding-top:20px;
    margin-top:250px;
  }
 
}
@media (max-width: 720px) {
  img {
    height: 290px;
  }

  table {
    width: 85%; /* Full width table */
  }
  
  h2{
    font-size:17px;
  }
  #des{
    margin-top:150px;
    padding-top:30px;
  }
}
@media (max-width: 680px) {
  img {
    height: 270px;
  }

  table {
    width: 90%; /* Full width table */
  }
  #pencil {
    top: 440px; /* Adjusted position for small screens */
  }
}
    </style>
</head>
<body>
    <h1><%= product[0].product_name %></h1>
    <div class="images">
      <img src="<%=product[0].p%>" alt="">
      <img src="<%=product[0].image_url%>" alt="">
      <img src="<%=product[0].image_url2%>" alt="">
      <img src="<%=product[0].image_url3%>" alt="">
    </div>
    <div id="des">
      <p id="hide"><%= id %></p>
      <h2>Description:</h2>
      <p><%= product[0].description %></p>
      <span id="pencil">
        <i class="fa-solid fa-pencil"></i>
      </span>
    </div>
    <div class="flex">
    <table>
      <tr>
        <td>
          <h2>Price:</h2>
          <p>$<%= product[0].price %></p>
        </td>
        <td>
          <% initial=product[0].price+product[0].discount_price %>
          <% discount=((initial-product[0].price)*100/initial).toFixed(2) %>
          <h2>Discount:</h2>
          <p><%= discount %>%</p>
        </td>
      </tr>
      <tr>
        <td>
          <h2>Stock Quantity:</h2>
          <p><%= product[0].stock_quantity %></p>
        </td>
        <td>
          <h2>Size:</h2>
          <p><%= product[0].size %></p>
        </td>
      </tr>
      <tr>
        <td>
          <h2>Color:</h2>
          <p><%= product[0].color %></p>
        </td>
        <td>
          <h2>Category:</h2>
          <p><%= product[0].name %></p>
        </td>
      </tr>
    </table>
  </div>
  <script>
    const d=document.getElementById("des");
    const id=d.childNodes[1].textContent;
    const edit=document.getElementById("pencil");
    edit.addEventListener("click", () => {
        
          window.location.href =`/admin/editProduct?productid=${id}`;
        });
  </script>
</body>
</html>